{
  "name": "paw",
  "version": "0.14.0",
  "description": "Portable local AI assistant with multi-agent chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder --mac",
    "dist:notarize": "electron-builder --mac && bash scripts/notarize.sh",
    "dbb": "node .ai/dbb/dbb-test.js"
  },
  "author": "momomo-agent",
  "license": "MIT",
  "build": {
    "appId": "com.momomo.paw",
    "productName": "Paw",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "package.json"
    ],
    "dmg": {
      "title": "Paw"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.8.1"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2"
  }
}
