{
  "name": "paw",
  "version": "0.18.1",
  "description": "Portable local AI assistant with multi-agent chat",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder --mac",
    "dist:notarize": "electron-builder --mac && bash scripts/notarize.sh",
    "dbb": "node .ai/dbb/dbb-test.js"
  },
  "author": "momomo-agent",
  "license": "MIT",
  "build": {
    "appId": "com.momomo.paw",
    "productName": "Paw",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "files": [
      "main.js",
      "preload.js",
      "session-store.js",
      "memory-index.js",
      "renderer/**/*",
      "assets/**/*",
      "tools/**/*",
      "skills/**/*",
      "core/**/*",
      "package.json"
    ],
    "dmg": {
      "title": "Paw"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.8.1"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^12.6.2",
    "linkedom": "^0.18.12",
    "node-llama-cpp": "^3.17.1",
    "sqlite-vec": "^0.1.7-alpha.2"
  }
}